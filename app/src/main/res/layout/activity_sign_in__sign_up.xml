<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:fillViewport="true"
    android:layout_gravity="center|top"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".SignIn_SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:layout_below="@+id/logo"
            android:id="@+id/sin_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/sigin_back_shape"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:background="@drawable/sign_in_back"
                android:layout_height="@dimen/_330sdp">
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/registration_back"
                android:orientation="vertical"
                android:id="@+id/registration_back_shape"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/sin_lin"
            android:id="@+id/tv_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:gravity="center|start"
                android:text="@string/get_loan_in_3_easy_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:gravity="center|start"
                android:text="@string/_1_create_your_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:gravity="center|start"
                android:text="@string/_2_enter_identification_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv4"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:gravity="center|start"
                android:text="@string/_3_enter_your_loan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tabs"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sign_tv"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_17sdp"
                android:text="@string/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/registration_tv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_17sdp"
                android:text="@string/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/signin_layout"
            android:layout_below="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_260sdp">

            <ImageView
                android:id="@+id/tri_angle"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="74dp"
                android:src="@drawable/tri" />

            <android.support.v7.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/email_rel"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/email_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/email"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:layout_toStartOf="@+id/email_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/sign_in_email"
                            android:textSize="@dimen/_12sdp"
                            android:hint="@string/email_addresss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/email_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/pass_rel"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_below="@+id/email_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/pass_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/password"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:layout_toStartOf="@+id/pass_icon"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textPassword"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/sign_in_pass"
                            android:hint="@string/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/pass_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_below="@+id/pass_rel"
                        android:id="@+id/forgot_tv"
                        android:text="@string/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.joooonho.SelectableRoundedImageView
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_width="match_parent"
                        android:id="@+id/image"
                        android:background="@drawable/bottom"
                        app:sriv_left_bottom_corner_radius="@dimen/_2sdp"
                        app:sriv_right_bottom_corner_radius="@dimen/_2sdp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/buttonroundconner_gradient"
                android:elevation="@dimen/_6sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/registration_layout"
            android:layout_below="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_360sdp">

            <ImageView
                android:id="@+id/tri_angle_res"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="74dp"
                android:src="@drawable/tri" />

            <android.support.v7.widget.CardView
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_340sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/first_name_rel"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/first_name_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/ic_person"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/first_name_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/first_name"
                            android:hint="@string/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/first_name_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/last_name_rel"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/first_name_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/last_name_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/ic_person"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/last_name_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/last_name"
                            android:hint="@string/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/last_name_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/email_rel_reg"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/last_name_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/email_icon_reg"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/email"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/email_icon_reg"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/sign_email_erg"
                            android:hint="@string/email_addresss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/email_icon_reg"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/id_passport_rel"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/email_rel_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/id_passport_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/id_number"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/id_passport_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/id_passport"
                            android:hint="@string/id_number_passport_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/id_passport_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/mobile_rel"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/id_passport_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/mobile_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/mobile_number"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="number"
                            android:layout_toStartOf="@+id/mobile_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/mobile"
                            android:hint="@string/mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/mobile_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/pass_rel_reg"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/mobile_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/pass_icon_reg"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/password"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/pass_icon_reg"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/sign_pass_reg"
                            android:hint="@string/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/pass_icon_reg"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/con_pass_rel"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@+id/pass_rel_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/con_pass_icon"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/password"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                        <EditText
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_12sdp"
                            android:layout_toStartOf="@+id/con_pass_icon"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:id="@+id/con_pass"
                            android:hint="@string/re_enter_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_below="@+id/con_pass_icon"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <com.joooonho.SelectableRoundedImageView
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_width="match_parent"
                        android:id="@+id/image_res"
                        android:background="@drawable/bottom"
                        app:sriv_left_bottom_corner_radius="@dimen/_20sdp"
                        app:sriv_right_bottom_corner_radius="@dimen/_20sdp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/regitration_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonroundconner_gradient"
                android:elevation="@dimen/_6sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>
    </RelativeLayout>



</ScrollView>